<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    tools:context=".CategoryWiseShayri">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/app_dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"

            >
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/leftarrow">

            </ImageView>

            <TextView
                android:id="@+id/textView_appbar_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/popinsthin"
                android:gravity="center"
                android:text="janvi"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_categorywise_shayri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar_category">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>